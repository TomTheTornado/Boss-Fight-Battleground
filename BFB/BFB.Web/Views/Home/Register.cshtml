@{
    ViewData["Title"] = "Register";
}
        <div class="text-center">
            <h1 class="display-4">Create an Account</h1>
            <p>Join the mayhem.</p>
        </div>

        <form>
            <div class="form-group">
                <label for="registerUsername">Username</label>
                <input type="text" class="form-control" id="registerUsername" placeholder="Username" />
            </div>
            <div class="form-group">
                <label for="registerEmail">Email</label>
                <input type="email" class="form-control" id="registerEmail" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="registerPassword">Password</label>
                <input type="password" class="form-control" id="registerPassword" aria-describedby="registerHelp" placeholder="Password">
                <small id="registerHelp" class="form-text text-muted">Boss Fight Battlegrounds will never share your information with anyone.</small>
            </div>
            <button type="submit" class="btn btn-primary">Create Account</button>
        </form>
