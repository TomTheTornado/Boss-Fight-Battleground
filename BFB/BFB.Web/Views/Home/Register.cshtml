@section head{
    <style type="text/css">
        body {
            background-image: url('https://cdn.discordapp.com/attachments/615650273637040224/616784907875909632/SPOILER_the_cooler_team_better_lines.png');
            margin: 0;
        }

        form {
            background: rgba(204, 204, 204, 0.6);
            border: 2px solid black;
            padding: 10px;
        }
        .text-center {
            color: white;
            text-shadow: 2px 2px #000000;
        }
    </style>
